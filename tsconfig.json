{
  "compilerOptions": {
    "outDir": "./dist/types/",
    "target": "es5",
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "strictNullChecks": true,
    "noImplicitAny" : true,
    "suppressImplicitAnyIndexErrors": true,
    "types": ["jquery", "angular", "isomorphic-fetch", "es6-promise"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "compileOnSave": false
}
