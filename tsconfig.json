{
  "compilerOptions": {
    "outDir": "./built/",
    "target": "es5",
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "strictNullChecks": true,
    "noImplicitAny" : true,
    "suppressImplicitAnyIndexErrors": true,
    "types": ["isomorphic-fetch", "es6-promise"],
    "declaration": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "compileOnSave": false
}
